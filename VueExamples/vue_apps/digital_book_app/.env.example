# API Configuration
# Copy this file to .env.local and fill in the actual values
# .env.local is gitignored and will not be committed

# IMPORTANT: Do NOT set NODE_ENV in .env files!
# Vite automatically sets NODE_ENV to:
#   - "development" when running `vite` or `vite dev`
#   - "production" when running `vite build`
# Use VITE_APP_ENV instead to distinguish between custom environments (dev/staging/prod)

# Environment identifier (dev/staging/prod)
VITE_APP_ENV=dev

# API Secret for request signing
VITE_APP_SECRET=your_secret_here

# RSA Private Key for book decryption
# WARNING: Private keys should ideally be on the backend, not frontend
VITE_APP_BOOK_PRIVATE_KEY=your_rsa_private_key_here

# Cryptographic salt for hashing
VITE_APP_SALT=your_salt_here

# Existing environment variables (already in use)
VITE_APP_SCOPE_NAME=your_scope_name
VITE_APP_KEY_REQUEST=your_api_key
VITE_APP_DEVICE_ID=your_device_id
